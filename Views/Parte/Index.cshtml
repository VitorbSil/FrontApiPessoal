<!--Namespace da classe de Modelo para esta view-->
@model IEnumerable<FrontApiPessoal.Models.ParteViewModel>
<!--Inclua os TempData para Sucesso e Erro aqui, conforme exemplo na view de Autenticação-->
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(@TempData["Mensagem"])</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}


@{ViewBag.Title = "Partes";} <!--Título da página para o navegador-->
<h2>Informações das Partes</h2> <!--Título da página-->
<p> <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Incluir nova Parte", "Create")
</p>
<table class="table">
    <tr><!--Títulos das colunas da tabela-->
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Tipo)</th>
        <th>@Html.DisplayNameFor(model => model.DocumentoIdentidade)</th>
        <th>@Html.DisplayNameFor(model => model.Endereco)</th>
        <th>@Html.DisplayNameFor(model => model.Telefone)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th></th>
    </tr>
    <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Tipo)</td>
            <td>@Html.DisplayFor(modelItem => item.DocumentoIdentidade)</td>
            <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
            <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td><!--Coluna para Links/botões-->
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) | 
                @Html.ActionLink("Detalhes", "Details", new{ id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }) 
            </td>
        </tr>
    }
</table>